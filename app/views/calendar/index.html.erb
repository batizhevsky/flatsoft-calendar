<%= stylesheet_link_tag "event_calendar" %>

<h1><%= title("Календарь") %></h1>
<p><%= link_to raw("<i class='icon-plus'></i> Добавить событие"), new_event_path, class: "btn" %> 
	Показать: 
	<% if params[:show_all] == 'false' %>
		<%= link_to "все", calendar_path(year: @year, month: @month, show_all: true) %>
	<% else %>
		<%= link_to "только свои", calendar_path(year: @year, month: @month, show_all: false) %>
	<% end %>
</p>

<%= raw(event_calendar) %>
