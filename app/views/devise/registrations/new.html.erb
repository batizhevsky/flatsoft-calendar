
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <fieldset>
      <legend><%= title("Регистрация") %></legend>
      <div class="control-group">
        <%= f.label :email, class: "control-label" %> 
        <div class="controls">
         <%= f.email_field :email, class: "input-xlarge", required: true %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :username, class: "control-label" %>
        <div class="controls"><%= f.text_field :username, class: "input-xlarge" %></div>
         <p class="help-block"><i>Опционально</i></p>
      </div>
      <div class="control-group">
        <%= f.label :password, class: "control-label" %>
        <div class="controls">
          <%= f.password_field :password, class: "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password_confirmation, class: "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation, class: "input-xlarge" %>
        </div>
      </div>
      <div><%= f.submit "Зарегистрироваться", class: "btn btn-primary", id: "register" %></div>  
    </fieldset>
  <% end %>

<%= render "devise/shared/links" %>
